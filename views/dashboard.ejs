<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="icon" type="image/png" href="/images/logo.png">
    <link rel="stylesheet" href="/stylesheets/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-cloud-upload-alt me-2"></i>
                Clowndinary
            </a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/dashboard">
                    <i class="fas fa-tachometer-alt me-1"></i>
                    Dashboard
                </a>
                <a class="nav-link" href="/upload">
                    <i class="fas fa-upload me-1"></i>
                    Upload
                </a>
                <form class="d-inline" method="POST" action="/logout">
                    <button type="submit" class="btn btn-outline-light btn-sm">
                        <i class="fas fa-sign-out-alt me-1"></i>
                        Logout
                    </button>
                </form>
            </div>
        </div>
    </nav>

    <main class="container mt-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>
                <i class="fas fa-tachometer-alt me-2"></i>
                Dashboard
            </h1>
            <a href="/upload" class="btn btn-primary">
                <i class="fas fa-upload me-2"></i>
                Upload Images
            </a>
        </div>

        <% if (locals.error) { %>
            <div class="alert alert-danger" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <%= error %>
            </div>
        <% } %>

        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h5 class="card-title">Cloud Name</h5>
                                <p class="card-text"><%= config.api_name %></p>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-cloud fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h5 class="card-title">Total Uploads</h5>
                                <p class="card-text">
                                    <%= batches.reduce((total, day) => total + (day.total_uploads || 0), 0) %>
                                </p>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-images fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <div>
                                <h5 class="card-title">Total Batches</h5>
                                <p class="card-text"><%= batches.reduce((total, day) => total + (day.batch_count || 0), 0) %></p>
                            </div>
                            <div class="align-self-center">
                                <i class="fas fa-layer-group fa-2x"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <% if (batches.length === 0) { %>
            <div class="text-center py-5">
                <i class="fas fa-images fa-4x text-muted mb-3"></i>
                <h3 class="text-muted">No uploads yet</h3>
                <p class="text-muted">Start by uploading some images!</p>
                <a href="/upload" class="btn btn-primary">
                    <i class="fas fa-upload me-2"></i>
                    Upload Images
                </a>
            </div>
        <% } else { %>
            <% batches.forEach(function(day) { %>
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-calendar-day me-2"></i>
                            <%= new Date(day.upload_date).toLocaleDateString() %>
                            <span class="badge bg-primary ms-2"><%= day.batch_count %> batches</span>
                            <span class="badge bg-success ms-1"><%= day.total_uploads %> images</span>
                        </h5>
                    </div>
                    <div class="card-body">
                        <% day.batches.forEach(function(batch) { %>
                            <div class="batch-container mb-4 p-3 border rounded">
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <h6 class="mb-0">
                                        <i class="fas fa-layer-group me-2"></i>
                                        <%= batch.batch_name %>
                                        <small class="text-muted">(<%= batch.upload_count %> images, <%= Math.round((batch.batch_size || 0) / 1024) %> KB)</small>
                                    </h6>
                                    <a href="/export-csv/<%= batch.batch_id %>" class="btn btn-sm btn-outline-success">
                                        <i class="fas fa-download me-1"></i>
                                        Export CSV
                                    </a>
                                </div>
                                <div class="row">
                                    <% if (batch.uploads && batch.uploads.length > 0) { %>
                                        <% batch.uploads.forEach(function(upload) { %>
                                            <div class="col-md-3 mb-3">
                                                <div class="card h-100">
                                                    <img src="<%= upload.cloudinary_secure_url %>" 
                                                         class="card-img-top" 
                                                         style="height: 200px; object-fit: cover;"
                                                         alt="<%= upload.original_name %>">
                                                    <div class="card-body p-2">
                                                        <h6 class="card-title text-truncate" title="<%= upload.original_name %>">
                                                            <%= upload.original_name %>
                                                        </h6>
                                                        <small class="text-muted">
                                                            <%= upload.width %>x<%= upload.height %> â€¢ 
                                                            <%= Math.round(upload.file_size / 1024) %> KB
                                                        </small>
                                                    </div>
                                                    <div class="card-footer p-2">
                                                        <div class="btn-group w-100" role="group">
                                                            <button type="button" class="btn btn-sm btn-outline-primary copy-link-btn" 
                                                                    data-url="<%= upload.cloudinary_secure_url %>">
                                                                <i class="fas fa-copy me-1"></i>
                                                                Copy
                                                            </button>
                                                            <a href="<%= upload.cloudinary_secure_url %>" 
                                                               target="_blank" 
                                                               class="btn btn-sm btn-outline-secondary">
                                                                <i class="fas fa-external-link-alt me-1"></i>
                                                                View
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        <% }) %>
                                    <% } %>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                </div>
            <% }) %>
        <% } %>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
    // Copy link functionality
    document.querySelectorAll('.copy-link-btn').forEach(function(btn) {
        btn.addEventListener('click', function() {
            const url = this.getAttribute('data-url');
            navigator.clipboard.writeText(url).then(function() {
                // Change button text temporarily
                const originalText = btn.innerHTML;
                btn.innerHTML = '<i class="fas fa-check me-1"></i>Copied!';
                btn.classList.remove('btn-outline-primary');
                btn.classList.add('btn-success');
                
                setTimeout(function() {
                    btn.innerHTML = originalText;
                    btn.classList.remove('btn-success');
                    btn.classList.add('btn-outline-primary');
                }, 2000);
            }).catch(function(err) {
                console.error('Failed to copy: ', err);
                alert('Failed to copy link to clipboard');
            });
        });
    });
    </script>
</body>
</html>
