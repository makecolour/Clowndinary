<div class="row justify-content-center" ng-app="clowndinaryApp" ng-controller="LoginController">
    <div class="col-md-6 col-lg-4">
        <div class="card shadow">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">
                    <i class="fas fa-sign-in-alt me-2"></i>
                    Login
                </h2>
                
                <% if (locals.error) { %>
                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <%= error %>
                    </div>
                <% } %>

                <form method="POST" action="/login" ng-submit="submitLogin($event)">
                    <div class="mb-3">
                        <label for="apiName" class="form-label">Cloudinary Cloud Name</label>
                        <input type="text" class="form-control" id="apiName" name="apiName" ng-model="loginData.apiName" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="apiKey" class="form-label">API Key</label>
                        <input type="text" class="form-control" id="apiKey" name="apiKey" ng-model="loginData.apiKey" required>
                    </div>
                    
                    <div class="mb-3">
                        <label for="apiSecret" class="form-label">API Secret</label>
                        <input type="password" class="form-control" id="apiSecret" name="apiSecret" ng-model="loginData.apiSecret" required>
                    </div>
                    
                    <button type="submit" class="btn btn-primary w-100 mb-3" ng-disabled="isLoading">
                        <i class="fas fa-sign-in-alt me-2" ng-class="{'fa-spinner fa-spin': isLoading}"></i>
                        <span ng-if="!isLoading">Login</span>
                        <span ng-if="isLoading">Logging in...</span>
                    </button>
                </form>
                
                <div class="text-center">
                    <p class="mb-0">Don't have credentials saved? 
                        <a href="/register" class="text-decoration-none">Register here</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    angular.module('clowndinaryApp', [])
    .controller('LoginController', function($scope) {
        $scope.loginData = {};
        $scope.isLoading = false;
        
        $scope.submitLogin = function(event) {
            $scope.isLoading = true;
            toastr.info('Validating credentials...');
        };
        
        // Show error messages using toastr if error exists
        <% if (locals.error) { %>
            toastr.error('<%= error %>');
        <% } %>
    });
</script>
